<Window x:Class="Stundenplan.StundeAnsicht"
        x:Name="ThisStundeAnsicht"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Stundenplan"
        mc:Ignorable="d"
        Title="Detailansicht"
        Height="150"
        Width="200"
        Visibility="Visible"
        WindowStyle="ToolWindow"
        ResizeMode="NoResize"
        Background="{Binding ElementName=ThisStundeAnsicht, Path=AusgewaehlteStunde.Color}"
        Topmost="True"
        WindowStartupLocation="Manual"
        Loaded="Window_Loaded">
   <Grid>
      <TextBlock>
         <Run Text="{Binding ElementName=ThisStundeAnsicht, Path=AusgewaehlteStunde.Titel}"
              FontSize="14"
              FontWeight="Bold"/>
         <LineBreak/>
         <Run Text="{Binding ElementName=ThisStundeAnsicht, Path=AusgewaehlteStunde.Lehrer}"/>
         <LineBreak/>
         <Run Text="{Binding ElementName=ThisStundeAnsicht, Path=AusgewaehlteStunde.Raum}"/>
      </TextBlock>
   </Grid>
</Window>
