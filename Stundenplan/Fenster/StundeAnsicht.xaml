<Window x:Class="Stundenplan.StundeAnsicht"
        x:Name="ThisStundeAnsicht"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Stundenplan"
        mc:Ignorable="d"
        Title="Detailansicht" Height="200" Width="300" Visibility="Visible" WindowStyle="ToolWindow" ResizeMode="NoResize">
    <Grid>
      <TextBlock Background="AntiqueWhite">
         <Run Text="{Binding ElementName=ThisStundeAnsicht, Path=AusgewaehlteStunde.Titel}"
              FontSize="14"
              FontWeight="Bold"/>
         <LineBreak/>
         <Run Text="Details zur Unterrichtsstunde:"/>
      </TextBlock>
      <TextBox Text="{Binding ElementName=ThisStundeAnsicht, Path=AusgewaehlteStunde.Details}"
               Margin="0,68,0,10"
               TextWrapping="Wrap"
               AcceptsReturn="True"
               VerticalScrollBarVisibility="Auto">
      </TextBox>
   </Grid>
</Window>
